<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="MainActivityItemTitle" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MainActivityItemDetails" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/white_high_opacity</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AddProjectActivityItem" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AddProjectActivityItem.Time">
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="AddProjectActivityItem.Definition">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white_high_opacity</item>
    </style>

    <style name="AddProjectActivityItem.Definition.Picture">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
