<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context="com.sofi.knittimer.AddProjectActivity">

    <EditText
        android:id="@+id/et_set_project_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="@string/add_project_name"
        android:padding="8dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/white_mid_opacity"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black_high_opacity"
        android:textCursorDrawable="@null"/>

    <!-- android:background and android:textCursorDrawable are set so the text cursor / caret
    and bottom line aren't shown in a weird color -->

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_set_project_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:spinnerMode="dropdown"
        android:layout_marginTop="8dp"
        android:padding="8dp"/>

</android.support.constraint.ConstraintLayout>
