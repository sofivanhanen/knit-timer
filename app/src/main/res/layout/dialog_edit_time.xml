<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <NumberPicker
        android:id="@+id/np_minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/first_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AddProjectActivityItem.Time"
        android:text=":"
        android:layout_toLeftOf="@id/np_minutes"
        android:layout_centerVertical="true"/>

    <NumberPicker
        android:id="@+id/np_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/first_colon"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/second_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AddProjectActivityItem.Time"
        android:text=":"
        android:layout_toRightOf="@id/np_minutes"
        android:layout_centerVertical="true"/>

    <NumberPicker
        android:id="@+id/np_seconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/second_colon"
        android:layout_centerVertical="true"/>

</RelativeLayout>