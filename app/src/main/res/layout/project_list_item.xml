<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    android:padding="4dp"
    android:layout_marginTop="4dp"
    android:backgroundTintMode="src_over"
    android:backgroundTint="@color/black_high_opacity">

    <!-- TODO: Create the fonts and styles for these TextViews -->

    <TextView
        android:id="@+id/tv_project_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        tools:text="My Cute Socks"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_project_name"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        tools:text="20% done, 2 hours and 5 minutes left"
        android:textColor="@color/white_high_opacity"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tv_details"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <TextView
            android:id="@+id/tv_time_spent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="01:34:44"
            android:gravity="center"
            android:textColor="@color/white_high_opacity"
            android:textSize="48sp"
            android:typeface="monospace"
            android:fontFamily="monospace"/>

        <!-- TODO: When user presses this icon, change it to pause and start timer -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:tint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_play_circle"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>